@using System.Web.Mvc;
@using ClayApplication.Service.ViewModel

@model AuthorizedUserForEditViewModel

@{
    ViewBag.Title = "EditAuthorisation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit user Authorisation</h2>
<div>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.DoorId, new { name = "doorId" })
        @Html.HiddenFor(m => m.UserId, new { name = "userId" })
        <div>
            <div>
                <div>
                </div>
                <div>
                    <label>@string.Format(" Access for {0}", Model.UserName) </label>
                    <label>@Html.CheckBoxFor(m => m.IsAuthorized)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        <div>@Html.ActionLink("Back to door details", "Details", "Door", new { id = Model.DoorId }, null)</div>
    </div>
</div>


