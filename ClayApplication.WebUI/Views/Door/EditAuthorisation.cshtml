@model ClayApplication.Service.ViewModel.AuthorizedUserViewModel

@{
    ViewBag.Title = "EditAuthorisation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit user Authorisation</h2>
<div>
    @using (Html.BeginForm())
    {
        <div>
            <div>
                <div>
                </div>
                <div>
                    <label>@string.Format(" Access for {0}", Model.UserName) </label>
                    <label>@Html.CheckBoxFor(m => m.Authorized)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        <div>@Html.ActionLink("Back to door details", "Details", new { id = Model.DoorId })</div>
    </div>
</div>

